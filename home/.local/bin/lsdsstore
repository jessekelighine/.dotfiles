#!/bin/bash

ds_list=()
if [[ $1 == '' ]]; then
	folders=(
		"$HOME/courses"
		"$HOME/Desktop"
		"$HOME/Documents"
		"$HOME/Downloads"
		"$HOME/Pictures"
		"$HOME/.config"
		"$HOME/.dotfiles"
		"$HOME/jessekelighine.github.io"
		)
else
	folders=( "$1" )
fi

for folder in "${folders[@]}" ; do
	ds_list+=( $(find "$folder" -name '.DS_Store') )
done

[[ -f "$HOME/.DS_Store" ]] && ds_list+=( "$HOME/.DS_Store" );

for item in "${ds_list[@]}"; do
	echo "$item"
done
