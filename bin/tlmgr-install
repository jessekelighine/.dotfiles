#!/usr/bin/env bash

message () {
	cat << EOF
usage: $(basename $0) [package]
note: please run as root.
EOF
}

# check argument and if run as root
[[ -z "$1" || $(id -u) != 0 ]] && {
	message >&2
	exit 1
}

# packages list path
package_list="$HOME/.config/nvim/pack/lang/opt/tex/PACKAGES.txt"
package_temp="$HOME/.config/nvim/pack/lang/opt/tex/.temp-PACKAGES.txt"

# update package list
echo "$1" >> "$package_list"
cat "$package_list" | sort | uniq > "$package_temp"
mv "$package_temp" "$package_list"

# install the actual package
tlmgr install "$1"

exit 0
